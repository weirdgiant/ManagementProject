                            <Border x:Name="radioButtonBorder"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="0"
                                        Padding="2"
                                        Grid.Column="1"
                                        Background="Transparent" 
                                        CornerRadius="5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center">

                                <ContentPresenter x:Name="contentPresenter" 
                                                  HorizontalAlignment="Center" 
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="false">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="true">
                            <Setter Property="Background" TargetName="BorderMain" Value="#272727"/>
                            <!--<Setter Property="Opacity" TargetName="BorderMain" Value="0.5"/>-->
                            <Setter Property="Visibility" TargetName="PathTriangle" Value="Visible"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter Property="Background" TargetName="radioButtonBorder" Value="Transparent"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

