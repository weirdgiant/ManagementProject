    <!--主菜单 电子地图-->
    <Style x:Key="MapRadioButtonStyle" TargetType="{x:Type RadioButton}">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type RadioButton}">
                    <Border x:Name="BorderMain" CornerRadius="2"  Background="Transparent">
                        <Grid x:Name="templateRoot" Background="Transparent" SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Path x:Name="PathTriangle" Visibility="Hidden" Stroke="#FF009FFF" Data="M 3,3 L 6,1 L 0,1 z"  Width="13" Height="6"  Stretch="Fill" Fill="#FF009FFF" />
                            <Image x:Name="optionMark" Grid.Row="1"  Margin="2"  Source="/ManagementProject;component/ImageSource/Icon/menuicon/在线电子地图.png" Height="20"/>
                            <Image x:Name="optionMarkClick" Grid.Row="1"  Visibility="Collapsed" Margin="2" Source="/ManagementProject;component/ImageSource/Icon/menuicon/在线电子地图_点击.png" Height="20"/>
                            <ContentPresenter x:Name="contentPresenter" 
                                                  HorizontalAlignment="Center" 
                                                  Margin="0 0 0 5"
                                                  Grid.Row="2"
                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                  VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter Property="Visibility" TargetName="optionMarkClick" Value="Visible"/>
                            <Setter Property="Visibility" TargetName="optionMark" Value="Hidden"/>
                            <Setter Property="Foreground" Value="#FF039AF5"></Setter>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="false">
                            <Setter Property="Visibility" TargetName="optionMark" Value="Visible"/>
                            <Setter Property="Visibility" TargetName="optionMarkClick" Value="Hidden"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>

                        <Trigger Property="IsChecked" Value="true">
                            <Setter Property="Visibility" TargetName="optionMark" Value="Hidden"/>
                            <Setter Property="Visibility" TargetName="optionMarkClick" Value="Visible"/>
                            <Setter Property="Visibility" TargetName="PathTriangle" Value="Visible"/>
                            <Setter Property="Foreground" Value="#FF009FFF"></Setter>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="{x:Null}">

                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

