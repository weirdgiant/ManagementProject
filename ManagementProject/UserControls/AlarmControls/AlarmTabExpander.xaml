<UserControl x:Class="ManagementProject.UserControls.AlarmTabExpander"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementProject.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="75">
    <Grid>
        <RadioButton Name="bt"
                     VerticalAlignment="Center" 
                     HorizontalAlignment="Center" 
                     Style="{StaticResource AlarmRadio }"
                     Foreground="White" Margin="0,0,0,0">
            
            <TextBlock  Text="&#xE10C;" Style="{StaticResource SegoeFontStyle}" FontSize="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </RadioButton>
    </Grid>
</UserControl>
