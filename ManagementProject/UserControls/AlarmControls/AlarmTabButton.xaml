<UserControl x:Class="ManagementProject.UserControls.AlarmTabButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementProject.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <Grid> 
        <RadioButton  Style="{StaticResource AlarmRadio }"
                          Command="{Binding AlarmMainCommand}"
                          Foreground="White" Margin="0,0,0,0">
            <Grid Height="50" Width="100" >
                <Label  Content="消防水压" Foreground="White" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </RadioButton>
    </Grid>
</UserControl>
