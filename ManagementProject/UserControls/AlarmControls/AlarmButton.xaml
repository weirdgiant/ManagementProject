<UserControl x:Class="ManagementProject.UserControls.AlarmButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementProject.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="78" d:DesignWidth="78">
    <Grid>
        <Button x:Name="button" Style="{StaticResource ImageCountButton}" Width="78" Height="78">
            <Grid Width="75" Height="75">
                <Grid Margin="4,4,4,4">
                    <Image Name="alarmicon" Margin="0,0,0,0" />
                </Grid>
                <Border Name="numberbackground" CornerRadius="10" BorderThickness="1" Margin="55,55,0,0" Background="#FFFAE000">
                    <Grid >
                        <TextBlock Name="alarmcount"  HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Red"/>
                    </Grid>
                </Border>
            </Grid>
        </Button>

    </Grid>
</UserControl>
