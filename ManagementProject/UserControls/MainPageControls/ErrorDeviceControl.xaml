<Window x:Class="ManagementProject.UserControls.ErrorDeviceControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementProject.UserControls"
        mc:Ignorable="d"
        Title="ErrorDeviceControl" 
        Width="50" 
        SizeToContent="Height" 
        ShowInTaskbar="False"  
        ResizeMode="NoResize" 
        Opacity="0.9"  
        OpacityMask="White"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None">
    <Grid>
        <DockPanel Height="100">
            <local:CameraInfoButton Height="50" DockPanel.Dock="Bottom"/>
            <local:ClientInfoButton x:Name="client" Height="50"  DockPanel.Dock="Bottom" />

        </DockPanel>

    </Grid>
</Window>
