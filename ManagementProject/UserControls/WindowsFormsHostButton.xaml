<UserControl x:Class="ManagementProject.UserControls.WindowsFormsHostButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementProject.UserControls"
             mc:Ignorable="d" 
             Background="Transparent"
             d:DesignHeight="50" d:DesignWidth="50">
    <Border>
        <WindowsFormsHost  Background="Transparent">
            <ElementHost >
                <Button x:Name="bt" Style="{StaticResource GelButton}"  >
                    <Image Margin="10" Name="btimage"  />
                </Button>
            </ElementHost>
        </WindowsFormsHost>
    </Border>
</UserControl>
