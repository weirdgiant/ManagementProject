<Window x:Class="ManagementProject.FunctionalWindows.TrackInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementProject.FunctionalWindows"
        xmlns:UserControls="clr-namespace:ManagementProject.UserControls"
        mc:Ignorable="d"
        Title="TrackInfo" 
        Height="1030"
        Width="323"
        ShowInTaskbar="False" 
        ResizeMode="NoResize" 
        Opacity="0.95" 
        OpacityMask="White"  
        AllowsTransparency="True"
        Background="Transparent" 
        WindowStyle="None">
      <Border>
        <Border.Effect>
            <DropShadowEffect ShadowDepth="1" Opacity="0.9" BlurRadius="20" Color="Black"/>
        </Border.Effect>
        
        <UserControls:TrackerInfoControl x:Name="tracker"  Margin="0,0,0,0" />
    </Border>
</Window>
