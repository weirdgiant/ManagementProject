        <ListBox Grid.Row="4" HorizontalAlignment="Center"  ItemsSource="{Binding Items}" Background="{x:Null}" BorderBrush="{x:Null}" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Border CornerRadius="5" Width="295" Height="66" Background="#252525" Margin="5">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="16" ShadowDepth="0" Opacity="1" />
                            </Border.Effect>

                            <Grid Margin="12">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
