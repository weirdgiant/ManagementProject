<UserControl x:Class="ManagementProject.UserControls.MainWindowStatistics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ManagementProject.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <ToggleButton  x:Name="drapbt" Style="{StaticResource NoBushToggleButton}"  Margin="0,0" VerticalAlignment="Stretch" Background="{x:Null}" BorderBrush="{x:Null}">
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,0" CornerRadius="5">
                <Grid>
                    <Image x:Name="image" Margin="0,0,0,0"/>
                    <Border Name="numberbackground" CornerRadius="10" BorderThickness="1" Margin="30,30,0,0" Background="#009FFF">
                        <Grid >
                            <TextBlock Name="number"  HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="White"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </ToggleButton>
       
        
    </Grid>
</UserControl>
